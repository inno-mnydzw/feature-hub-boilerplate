{
    "compilerOptions": {
      "target": "ES2017",
      "module": "es6",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "sourceMap": true,
      "inlineSources": true,
      "strict": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "lib": ["dom", "es2017"],
      "jsx": "react",
      "experimentalDecorators": true
    }
  }